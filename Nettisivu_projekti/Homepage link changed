<!-- "Palaa ylös" -painike -->
    <div class="scroll-btn" onclick="scrollToTop()">
        Palaa ylös
    </div>

    <script>
        // Näytä "palaa ylös" -painike, kun skrollataan tietyn verran alaspäin
        window.onscroll = function() {
            scrollFunction();
        };

        function scrollFunction() {
            var scrollButton = document.querySelector('.scroll-btn');
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                scrollButton.style.display = 'block';
            } else {
                scrollButton.style.display = 'none';
            }
        }

        // Liikuta sivun yläosaan kun "palaa ylös" -painiketta klikataan
        function scrollToTop() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>

